	 global $post_id;
	 
	 $options = get_option('aisis_core');
	 if(have_posts()){
	?>
	<div id="<?php if($options['no_sidebar_search'] != 1 && $option_global['no_sidebar_global'] != 1){ echo 'content'; }else{ echo 'contentFull'; }?>">
   	<?php while (have_posts()) : the_post();?>
		<article class="post clearfix">
			<header>
				<h1 class="postTitle"><a href="<?php the_permalink(); ?>"><?php the_title(); ?></a></h1>
				<div class="authorInfo">Author of this post:  <a href="<?php echo get_author_posts_url(get_the_author_meta( 'ID' )); ?>"><?php the_author_meta('display_name'); ?></a></div>
			</header>
			<?php if(get_the_post_thumbnail($post_id) != ''){?>
                <figure class="soft-embossed post-image">
                    <?php the_post_thumbnail(); ?>
                </figure>
            <?php } ?>
			<p><?php the_excerpt(); ?></p>
		</article>
        <?php
		endwhile;
		?>
	</div>
    <?php 
	if($options['no_sidebar_search'] != 1 && $option_global['no_sidebar_global'] != 1){
		get_sidebar();
	}
	aisis_footer();
	?>
    <?php
	 }else{
		 aisis_404();
	 }
	?>